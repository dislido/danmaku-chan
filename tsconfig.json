{
  "compilerOptions": {
    "outDir": "dist",
    "module": "none",
    "target": "es2017",
    "allowJs": true,
    "newLine": "lf",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "typePatches"
  ]
}